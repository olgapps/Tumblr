<!DOCTYPE html>
<html>
  <head>
    <title>Tumblr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%=csrf_meta_tag%>
  </head>

  <body>
    <div id="sidebar">
      <ul>
        <li class="category"><%=link_to "Tumblr", root_path%></li>
        <li><%=link_to "Posts", root_path%></li>
        <li><%=link_to "About", about_path%></li>
        <%if !user_signed_in?%>
      <li class ="sign_in"><%=link_to 'User Login', new_user_session_path %></li>
      <%end%>
      </ul>
      
    </div>

    <div id="main_content">
      <div id="header">
      <%if current_page?(root_path)%>

        <p>Post Feed</p>
      <%elsif current_page?(about_path)%>
       <p>My site</p>
       <%else%>
       <%=link_to "back to post feed", root_path%>
       <%end%>
       <%if user_signed_in?%>
          <div class="buttons">
            <button class="button"><%=link_to "Make Post", new_post_path%></button>
            <button class="button"><%=link_to "Log out", destroy_user_session_path(current_user), method: :delete%></button>
          </div>
          <%end%>
        </div>

        <%flash.each do |name,msg|%>
          <%=content_tag(:div, msg, class:"alert")%>
        <%end%>
    <%= yield %>
  </body>
</html>
